---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import BackgroundCanvas from '../../components/BackgroundCanvas';
import LiteFooter from '../../components/LiteFooter.astro';

export async function getStaticPaths() {
    const blogPosts = await getCollection('blog');
    return blogPosts.map(post => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Generate ISO date from display date if not provided
const displayDate = post.data.date;
const isoDate = post.data.dateISO || new Date(displayDate).toISOString();

// Article structured data
const articleSchema = {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.data.title,
    "description": post.data.description,
    "datePublished": isoDate,
    "dateModified": isoDate,
    "author": {
        "@type": "Person",
        "name": post.data.author || "Smooth Plugins Team"
    },
    "publisher": {
        "@type": "Organization",
        "name": "Smooth Plugins",
        "logo": {
            "@type": "ImageObject",
            "url": "https://smoothplugins.com/logo.png"
        }
    },
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": `https://smoothplugins.com/blog/${post.slug}`
    }
};
---

<Layout
    title={post.data.title}
    description={post.data.description}
    type="article"
    publishedTime={isoDate}
    author={post.data.author || "Smooth Plugins Team"}
>
    <BackgroundCanvas client:only="react" />
    <div class="layout-container">
        <Navigation active="Blog" />

        <article class="blog-post">
            <header class="post-header">
                <time class="post-meta" datetime={isoDate}>{post.data.date}</time>
                <h1>{post.data.title}</h1>
                <p class="post-description">{post.data.description}</p>
                {post.data.author && <p class="post-author">By {post.data.author}</p>}
            </header>

            <div class="post-content">
                <Content />
            </div>

            <footer class="post-footer">
                <a href="/blog" class="back-link">‚Üê Back to Blog</a>
            </footer>
        </article>

        <LiteFooter />
    </div>

    <!-- Article Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
</Layout>

<style>
    .blog-post {
        grid-column: 1 / -1;
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .post-header {
        margin-bottom: 48px;
    }

    .post-meta {
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.6;
        margin-bottom: 16px;
    }

    .post-header h1 {
        font-size: 48px;
        letter-spacing: -2px;
        line-height: 1.1;
        margin-bottom: 16px;
    }

    .post-description {
        font-size: 20px;
        opacity: 0.7;
        line-height: 1.5;
    }

    .post-author {
        font-size: 14px;
        margin-top: 16px;
        opacity: 0.6;
        font-weight: 500;
    }

    .post-content {
        font-size: 18px;
        line-height: 1.8;
    }

    .post-content :global(h2) {
        font-size: 32px;
        letter-spacing: -1px;
        margin-top: 48px;
        margin-bottom: 24px;
    }

    .post-content :global(h3) {
        font-size: 24px;
        margin-top: 32px;
        margin-bottom: 16px;
    }

    .post-content :global(p) {
        margin-bottom: 24px;
    }

    .post-content :global(ul) {
        margin: 24px 0;
        padding-left: 24px;
    }

    .post-content :global(li) {
        margin-bottom: 12px;
    }

    .post-content :global(strong) {
        font-weight: 600;
    }

    .post-content :global(code) {
        background: rgba(0, 0, 0, 0.05);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.9em;
        font-family: 'Monaco', 'Courier New', monospace;
    }

    .post-content :global(pre) {
        background: rgba(0, 0, 0, 0.05);
        padding: 24px;
        border-radius: 8px;
        overflow-x: auto;
        margin: 32px 0;
    }

    .post-content :global(pre code) {
        background: none;
        padding: 0;
    }

    .post-footer {
        margin-top: 64px;
        padding-top: 32px;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .back-link {
        font-weight: 600;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .blog-post {
            padding: 20px 16px;
        }

        .post-header {
            margin-bottom: 32px;
        }

        .post-header h1 {
            font-size: 36px;
        }

        .post-description {
            font-size: 18px;
        }

        .post-content {
            font-size: 16px;
        }

        .post-content :global(h2) {
            font-size: 28px;
            margin-top: 36px;
            margin-bottom: 20px;
        }

        .post-content :global(h3) {
            font-size: 22px;
            margin-top: 28px;
        }

        .post-content :global(pre) {
            padding: 16px;
            margin: 24px -16px;
            border-radius: 0;
        }
    }

    @media (max-width: 480px) {
        .blog-post {
            padding: 16px 12px;
        }

        .post-header h1 {
            font-size: 32px;
            letter-spacing: -1px;
        }

        .post-description {
            font-size: 16px;
        }

        .post-content {
            font-size: 15px;
            line-height: 1.7;
        }

        .post-content :global(h2) {
            font-size: 24px;
            margin-top: 32px;
            margin-bottom: 16px;
        }

        .post-content :global(h3) {
            font-size: 20px;
        }

        .post-footer {
            margin-top: 48px;
            padding-top: 24px;
        }
    }
</style>

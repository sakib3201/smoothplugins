---
interface Step {
    name: string;
    text: string;
    image?: string;
}

interface Props {
    name: string;
    description: string;
    steps: Step[];
    estimatedTime?: string;
    supply?: string[];
    tool?: string[];
}

const { name, description, steps, estimatedTime = "PT10M", supply = [], tool = [] } = Astro.props;

// Generate HowTo schema for AI engines
const howToSchema = {
    "@context": "https://schema.org",
    "@type": "HowTo",
    "name": name,
    "description": description,
    "estimatedCost": {
        "@type": "MonetaryAmount",
        "currency": "USD",
        "value": "0"
    },
    "totalTime": estimatedTime,
    ...(supply.length > 0 && {
        "supply": supply.map(item => ({
            "@type": "HowToSupply",
            "name": item
        }))
    }),
    ...(tool.length > 0 && {
        "tool": tool.map(item => ({
            "@type": "HowToTool",
            "name": item
        }))
    }),
    "step": steps.map((step, index) => ({
        "@type": "HowToStep",
        "position": index + 1,
        "name": step.name,
        "text": step.text,
        ...(step.image && { "image": step.image })
    }))
};
---

<section class="howto-section">
    <div class="howto-header">
        <h2>{name}</h2>
        <p class="howto-description">{description}</p>
        {estimatedTime && (
            <div class="howto-meta">
                <span class="meta-item">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span>{estimatedTime.replace('PT', '').replace('M', ' minutes')}</span>
                </span>
            </div>
        )}
    </div>

    <ol class="howto-steps">
        {steps.map((step, index) => (
            <li class="howto-step">
                <div class="step-number">{index + 1}</div>
                <div class="step-content">
                    <h3 class="step-name">{step.name}</h3>
                    <p class="step-text">{step.text}</p>
                </div>
            </li>
        ))}
    </ol>
</section>

<!-- HowTo Schema for AI engines -->
<script type="application/ld+json" set:html={JSON.stringify(howToSchema)} />


<style>
    .lite-footer {
        grid-column: 1 / -1;
        padding: 48px 0 32px;
        margin-top: 80px;
        border-top: 1px solid var(--c-border);
    }

    .lite-footer-content {
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 32px;
        text-align: center;
    }

    .lite-footer-brand {
        display: flex;
        justify-content: center;
    }

    .footer-logo-link {
        display: flex;
        align-items: center;
        gap: 10px;
        font-family: var(--font-display);
        font-weight: var(--weight-bold);
        font-size: var(--text-lg);
        letter-spacing: var(--tracking-tight);
        color: var(--c-text-primary);
        text-decoration: none;
        transition: transform 0.3s var(--ease-smooth);
    }

    .footer-logo-link:hover {
        transform: scale(1.05);
    }

    .logo-dot {
        width: 10px;
        height: 10px;
        background: linear-gradient(135deg, var(--c-lavender), var(--c-peach));
        border-radius: 50%;
        box-shadow: 0 2px 8px var(--c-logo-dot-shadow);
        transition: transform 0.3s var(--ease-smooth);
    }

    .footer-logo-link:hover .logo-dot {
        transform: rotate(180deg) scale(1.2);
    }

    .lite-footer-nav {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        justify-content: center;
    }

    .lite-footer-nav a {
        font-family: var(--font-body);
        font-size: var(--text-sm);
        font-weight: var(--weight-medium);
        color: var(--c-text-secondary);
        text-decoration: none;
        transition: color 0.3s var(--ease-smooth);
        position: relative;
    }

    .lite-footer-nav a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--c-text-primary);
        transition: width 0.3s var(--ease-smooth);
    }

    .lite-footer-nav a:hover {
        color: var(--c-text-primary);
    }

    .lite-footer-nav a:hover::after {
        width: 100%;
    }

    .lite-footer-meta {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .copyright {
        font-family: var(--font-body);
        font-size: var(--text-sm);
        color: var(--c-text-secondary);
    }

    .social-links {
        display: flex;
        gap: 16px;
        align-items: center;
    }

    .social-links a {
        display: block;
        color: var(--c-text-secondary);
        transition: all 0.3s var(--ease-smooth);
        line-height: 0;
    }

    .social-links svg {
        width: 20px;
        height: 20px;
        display: block;
        transition: transform 0.3s var(--ease-smooth);
    }

    .social-links a:hover {
        color: var(--c-text-primary);
    }

    .social-links a:hover svg {
        transform: scale(1.15) rotate(-5deg);
    }

    @media (max-width: 640px) {
        .lite-footer {
            padding: 40px 20px 24px;
            margin-top: 60px;
        }

        .lite-footer-content {
            gap: 24px;
        }

        .lite-footer-nav {
            gap: 16px;
        }

        .lite-footer-nav a {
            font-size: var(--text-xs);
        }

        .copyright {
            font-size: var(--text-xs);
        }

        .social-links svg {
            width: 18px;
            height: 18px;
        }
    }
</style>

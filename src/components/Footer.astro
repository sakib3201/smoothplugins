<style>
    .footer {
        grid-column: 1 / -1;
        background: var(--c-surface);
        border-radius: var(--radius-lg);
        padding: 60px;
        margin-top: 40px;
        box-shadow: 0 10px 40px var(--c-shadow);
        position: relative;
        overflow: hidden;
    }

    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg,
            var(--c-lavender) 0%,
            var(--c-peach) 25%,
            var(--c-blue) 50%,
            var(--c-pink) 75%,
            var(--c-rust) 100%
        );
        opacity: 0.6;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        gap: 48px;
    }

    .footer-main {
        display: grid;
        grid-template-columns: 1.5fr 2fr;
        gap: 60px;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 700;
        font-size: 28px;
        letter-spacing: -0.5px;
        color: var(--c-text-primary);
    }

    .logo-dot {
        width: 14px;
        height: 14px;
        background: linear-gradient(135deg, var(--c-lavender), var(--c-peach));
        border-radius: 50%;
        box-shadow: 0 4px 12px var(--c-logo-dot-shadow);
    }

    .footer-tagline {
        font-size: 16px;
        line-height: 1.6;
        color: var(--c-text-secondary);
        max-width: 320px;
    }

    .tech-badges {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .tech-badge {
        font-size: 11px;
        font-family: monospace;
        padding: 6px 12px;
        background: var(--c-bg);
        border-radius: var(--radius-pill);
        color: var(--c-text-secondary);
        font-weight: 600;
        letter-spacing: 0.5px;
        border: 1px solid var(--c-border);
    }

    .footer-links-group {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 40px;
    }

    .footer-section h3 {
        font-size: 14px;
        font-weight: 600;
        color: var(--c-text-primary);
        margin-bottom: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .footer-section ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .footer-section a {
        color: var(--c-text-secondary);
        font-size: 15px;
        transition: color 0.3s var(--ease-smooth), transform 0.3s var(--ease-smooth);
        display: inline-block;
        position: relative;
    }

    .footer-section a::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--c-text-primary);
        transition: width 0.3s var(--ease-smooth);
    }

    .footer-section a:hover {
        color: var(--c-text-primary);
        transform: translateX(4px);
    }

    .footer-section a:hover::after {
        width: 100%;
    }

    .social-links {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .social-link {
        display: block;
        color: var(--c-text-secondary);
        transition: all 0.3s var(--ease-smooth);
        line-height: 0;
    }

    .social-link svg {
        width: 24px;
        height: 24px;
        display: block;
        transition: transform 0.3s var(--ease-smooth);
    }

    .social-link:hover {
        color: var(--c-text-primary);
    }

    .social-link:hover svg {
        transform: scale(1.15) rotate(-5deg);
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 32px;
        border-top: 1px solid var(--c-border);
    }

    .copyright {
        color: var(--c-text-secondary);
        font-size: 14px;
    }

    .footer-meta {
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .built-with {
        color: var(--c-text-secondary);
        font-size: 14px;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        color: var(--c-text-secondary);
        padding: 8px 16px;
        background: var(--c-bg);
        border-radius: var(--radius-pill);
        border: 1px solid var(--c-border);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background: var(--c-status-green);
        border-radius: 50%;
        box-shadow: 0 0 8px var(--c-status-green-glow);
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }

    @media (max-width: 1024px) {
        .footer {
            padding: 40px 30px;
        }

        .footer-main {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .footer-links-group {
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .footer-meta {
            flex-direction: column;
            gap: 12px;
        }
    }

    @media (max-width: 640px) {
        .footer {
            padding: 30px 20px;
        }

        .footer-links-group {
            grid-template-columns: 1fr;
            gap: 24px;
        }

        .footer-logo {
            font-size: 24px;
        }

        .footer-tagline {
            font-size: 14px;
        }
    }
</style>

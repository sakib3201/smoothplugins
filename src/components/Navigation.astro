---
import ThemeToggle from './ThemeToggle';
const { active = "Home" } = Astro.props;

const items = [
    { name: "Catalog", href: "/products", tooltip: "Where the magic happens" },
    { name: "Smooth Search", href: "/products/smooth-search", tooltip: "Speed of Rust, comfort of your couch" },
    { name: "Documentation", href: "/documentation", tooltip: "Read the manual (yes, really)" },
    { name: "Support", href: "/support", tooltip: "Need help? We got you" },
    { name: "About", href: "/about", tooltip: "Who we are and why we care" },
    { name: "Blog", href: "/blog", tooltip: "We write, you procrastinate" },
];
---

<nav class="nav-island">
    <a href="/" class="logo">
        <div class="logo-dot"></div>
        Smooth Plugins
    </a>

    <button class="hamburger" aria-label="Toggle menu" aria-expanded="false">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
    </button>

    <div class="nav-links">
        {items.map((item) => (
            <a
                href={item.href}
                class={`nav-item ${active === item.name ? 'active' : ''}`}
                data-tooltip={item.tooltip}
            >
                {item.name}
            </a>
        ))}
        <div class="theme-toggle-wrapper">
            <ThemeToggle client:load />
        </div>
    </div>

    <div class="mobile-menu-overlay"></div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        const overlay = document.querySelector('.mobile-menu-overlay');
        const navItems = document.querySelectorAll('.nav-item');

        function toggleMenu() {
            const isOpen = hamburger?.getAttribute('aria-expanded') === 'true';
            hamburger?.setAttribute('aria-expanded', String(!isOpen));
            hamburger?.classList.toggle('active');
            navLinks?.classList.toggle('active');
            overlay?.classList.toggle('active');
            document.body.style.overflow = isOpen ? '' : 'hidden';
        }

        hamburger?.addEventListener('click', toggleMenu);
        overlay?.addEventListener('click', toggleMenu);

        // Close menu when clicking nav items
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                if (navLinks?.classList.contains('active')) {
                    toggleMenu();
                }
            });
        });
    });
</script>

<style>
    .nav-island {
        grid-column: 1 / -1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        padding: 20px 0;
        margin-bottom: 20px;
        position: relative;
        z-index: 100;
    }

    .logo {
        font-weight: 700;
        font-size: 24px;
        letter-spacing: -0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        color: inherit;
        z-index: 102;
    }

    .logo-dot {
        width: 12px;
        height: 12px;
        background-color: var(--c-text-primary);
        border-radius: 50%;
    }

    .hamburger {
        display: none;
        flex-direction: column;
        gap: 6px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        z-index: 102;
        transition: transform 0.3s var(--ease-smooth);
    }

    .hamburger:hover {
        transform: scale(1.1);
    }

    .hamburger-line {
        width: 28px;
        height: 3px;
        background-color: var(--c-text-primary);
        border-radius: 2px;
        transition: all 0.3s var(--ease-smooth);
    }

    .hamburger.active .hamburger-line:nth-child(1) {
        transform: translateY(9px) rotate(45deg);
    }

    .hamburger.active .hamburger-line:nth-child(2) {
        opacity: 0;
        transform: translateX(-20px);
    }

    .hamburger.active .hamburger-line:nth-child(3) {
        transform: translateY(-9px) rotate(-45deg);
    }

    .mobile-menu-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.4s var(--ease-smooth);
        z-index: 98;
    }

    .mobile-menu-overlay.active {
        opacity: 1;
        pointer-events: all;
    }

    .nav-links {
        display: flex;
        gap: 8px;
        background: var(--c-surface);
        padding: 6px;
        border-radius: var(--radius-pill);
        box-shadow: 0 10px 30px var(--c-shadow);
        margin-left: auto;
    }

    .nav-item {
        padding: 12px 24px;
        text-decoration: none;
        color: var(--c-text-primary);
        font-weight: 500;
        border-radius: var(--radius-pill);
        transition: all 0.3s var(--ease-smooth);
        font-size: 14px;
        position: relative;
    }

    .nav-item:hover {
        background-color: var(--c-bg);
    }

    .nav-item[data-tooltip]::after {
        content: attr(data-tooltip);
        position: absolute;
        bottom: -40px;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--c-primary);
        color: var(--c-primary-inverse);
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
        white-space: nowrap;
        z-index: 1000;
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.2s ease-out, transform 0.2s ease-out;
    }

    .nav-item[data-tooltip]:hover::after {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }

    .nav-item.active {
        background-color: var(--c-primary);
        color: var(--c-primary-inverse);
    }

    .nav-item.active[data-tooltip]:hover::after {
        background-color: var(--c-text-primary);
        color: var(--c-bg);
    }

    .theme-toggle-wrapper {
        display: flex;
        align-items: center;
        padding-left: 8px;
        margin-left: 8px;
        border-left: 1px solid var(--c-border);
    }

    @media (max-width: 768px) {
        .hamburger {
            display: flex;
        }

        .mobile-menu-overlay {
            display: block;
        }

        .nav-links {
            position: fixed;
            top: 0;
            right: 0;
            height: 100vh;
            width: min(320px, 85vw);
            flex-direction: column;
            gap: 0;
            padding: 100px 32px 32px;
            margin: 0;
            border-radius: 0;
            box-shadow: -10px 0 40px var(--c-shadow);
            transform: translateX(100%);
            transition: transform 0.4s var(--ease-smooth);
            z-index: 99;
            overflow-y: auto;
        }

        .nav-links.active {
            transform: translateX(0);
        }

        .nav-item {
            width: 100%;
            padding: 16px 20px;
            font-size: 18px;
            border-radius: var(--radius-md);
            text-align: left;
            opacity: 0;
            transform: translateX(20px);
            transition: all 0.3s var(--ease-smooth);
        }

        .nav-links.active .nav-item {
            opacity: 1;
            transform: translateX(0);
        }

        .nav-links.active .nav-item:nth-child(1) {
            transition-delay: 0.1s;
        }

        .nav-links.active .nav-item:nth-child(2) {
            transition-delay: 0.15s;
        }

        .nav-links.active .nav-item:nth-child(3) {
            transition-delay: 0.2s;
        }

        .nav-links.active .nav-item:nth-child(4) {
            transition-delay: 0.25s;
        }

        .nav-links.active .nav-item:nth-child(5) {
            transition-delay: 0.3s;
        }

        .nav-links.active .nav-item:nth-child(6) {
            transition-delay: 0.35s;
        }

        .nav-item[data-tooltip]::after,
        .nav-item[data-tooltip]:hover::after {
            display: none;
        }

        .theme-toggle-wrapper {
            width: 100%;
            padding: 20px 20px 0;
            margin: 20px 0 0;
            border-left: none;
            border-top: 1px solid var(--c-border);
            justify-content: flex-start;
            opacity: 0;
            transform: translateX(20px);
            transition: all 0.3s var(--ease-smooth);
            transition-delay: 0.3s;
        }

        .nav-links.active .theme-toggle-wrapper {
            opacity: 1;
            transform: translateX(0);
            transition-delay: 0.4s;
        }
    }

    @media (max-width: 480px) {
        .logo {
            font-size: 20px;
        }

        .logo-dot {
            width: 10px;
            height: 10px;
        }

        .nav-links {
            width: 100vw;
            right: 0;
            padding: 80px 24px 24px;
        }
    }
</style>

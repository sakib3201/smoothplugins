---
import ThemeToggle from './ThemeToggle';
const { active = "Home" } = Astro.props;

const items = [
    { name: "Catalog", href: "/products" },
    { name: "Smooth Search", href: "/products/smooth-search" },
    { name: "Documentation", href: "#" },
    { name: "Blog", href: "/blog" },
];
---

<nav class="nav-island">
    <a href="/" class="logo">
        <div class="logo-dot"></div>
        Smooth Plugins
    </a>

    <div class="nav-links">
        {items.map((item) => (
            <a
                href={item.href}
                class={`nav-item ${active === item.name ? 'active' : ''}`}
            >
                {item.name}
            </a>
        ))}
        <div class="theme-toggle-wrapper">
            <ThemeToggle client:load />
        </div>
    </div>
</nav>

<style>
    .nav-island {
        grid-column: 1 / -1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        padding: 20px 0;
        margin-bottom: 20px;
    }

    .logo {
        font-weight: 700;
        font-size: 24px;
        letter-spacing: -0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        color: inherit;
    }

    .logo-dot {
        width: 12px;
        height: 12px;
        background-color: var(--c-text-primary);
        border-radius: 50%;
    }

    .nav-links {
        display: flex;
        gap: 8px;
        background: var(--c-surface);
        padding: 6px;
        border-radius: var(--radius-pill);
        box-shadow: 0 10px 30px var(--c-shadow);
        margin-left: auto;
    }

    .nav-item {
        padding: 12px 24px;
        text-decoration: none;
        color: var(--c-text-primary);
        font-weight: 500;
        border-radius: var(--radius-pill);
        transition: all 0.3s var(--ease-smooth);
        font-size: 14px;
    }

    .nav-item:hover {
        background-color: var(--c-bg);
    }

    .nav-item.active {
        background-color: var(--c-primary);
        color: var(--c-primary-inverse);
    }

    .theme-toggle-wrapper {
        display: flex;
        align-items: center;
        padding-left: 8px;
        margin-left: 8px;
        border-left: 1px solid var(--c-border);
    }

    @media (max-width: 768px) {
        .nav-island {
            flex-direction: column;
            gap: 20px;
        }
        .nav-links {
            width: 100%;
            overflow-x: auto;
            justify-content: center;
        }
        .nav-item {
            padding: 10px 16px;
            white-space: nowrap;
        }
    }
</style>
